{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@platform/*": ["src/platform/*"],
      "@platform/common": ["src/platform/components/common"],
      "@platform/layouts": ["src/platform/components/layouts"],
      "@platform/dashboards": ["src/platform/components/dashboards"],
      "@platform/network-catalog/queries": ["src/platform/hooks/network-catalog/queries"],
      "@platform/cart/mutations": ["src/platform/hooks/cart/mutations"],
      "@platform/cart/queries": ["src/platform/hooks/cart/queries"],
      "@platform/user-notifications/queries": ["src/platform/hooks/user-notifications/queries"],
      "@platform/user-notifications/mutations": ["src/platform/hooks/user-notifications/mutations"],
      "@platform/integrations/queries": ["src/platform/hooks/integrations/queries"],
      "@platform/integrations/mutations": ["src/platform/hooks/integrations/mutations"],
      "@lightning/*": ["src/features/lightning/*"],
      "@lightning/queries": ["src/features/lightning/hooks/queries"],
      "@lightning/mutations": ["src/features/lightning/hooks/mutations"],
      "@pocket/*": ["src/features/pocket/*"],
      "@pocket/queries": ["src/features/pocket/hooks/queries"],
      "@pocket/providers": ["src/features/pocket/hooks/chart"],
      "@endpoints/*": ["src/features/endpoints/*"],
      "@endpoints/queries": ["src/features/endpoints/hooks/queries"],
      "@endpoints/mutations": ["src/features/endpoints/hooks/mutations"],
      "@infrastructure/lightning-connect/*": ["src/features/infrastructure/lightning-connect/*"],
      "@icons/*": ["src/platform/components/icons/*"],
      "@icons": ["src/platform/components/icons"],
      "@providers": ["src/providers"],
      "@ui": ["src/providers/ui"], 
      "@hoc": ["src/providers/hoc"],
      "@errors": ["src/providers/errors"],
      "@errors/*": ["src/providers/errors/*"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@/*": ["src/*"]
    }
  }
}
