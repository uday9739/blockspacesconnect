{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": { 
          "introspectComments": true,
          "classValidatorShim": true,
          "controllerFileNameSuffix": "Controller.ts",
          "dtoFileNameSuffix": [".dto.ts", "Dto.ts"]
        }
      }
    ]
  }
}
