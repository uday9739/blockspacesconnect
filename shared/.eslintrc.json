{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "prettier",
        "airbnb", 
        "airbnb/hooks"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        "semi": [
            "error",
            "always"
        ]
    },
    "plugins": [
        "prettier"
    ]
}